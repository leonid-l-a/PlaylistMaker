<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settings_screen_text_view_style">
        <item name="android:textSize">@dimen/text_common_size</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingVertical">@dimen/big_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/big_line_height</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:drawableTint">@color/settings_activity_icon_fill_color</item>
    </style>

    <style name="toolbar_style" parent="header_style">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="navigationIconTint">@color/common_text_color</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_line_height</item>
        <item name="titleTextColor">@color/common_text_color</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>
    
    <style name="track_artist_name_and_time_style">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/settings_activity_icon_fill_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="search_screen_text_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="common_button_style">
        <item name="backgroundTint">@color/common_text_color</item>
        <item name="cornerRadius">54dp</item>
    </style>
    
    <style name="player_screen_characteristics_names_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="player_screen_characteristics_style">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="layout_constraintStart_toEndOf">@id/textsBarrier</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NoBackgroundBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>


</resources>