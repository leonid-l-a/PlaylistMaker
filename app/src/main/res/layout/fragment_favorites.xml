<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_screen_background_tint"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/phEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ph_library" />

        <TextView
            style="@style/settings_screen_text_view_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:padding="0dp"
            android:text="@string/empty_library" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFavoritesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/common_screen_background_tint"
        android:visibility="gone"/>


</LinearLayout>